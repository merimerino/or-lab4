doctype html
head
  title Licensed Horses Cro
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://unpkg.com/bootstrap-table@1.17.1/dist/bootstrap-table.min.css')
  link(rel='stylesheet' href='style.css')
nav.navbar.navbar-expand-sm.navbar-light.bg-light
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarTogglerDemo03' aria-controls='navbarTogglerDemo03' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarTogglerDemo03.collapse.navbar-collapse
    ul.navbar-nav.mr-auto.mt-2.mt-lg-0
      li.nav-item
        a.nav-link(href='/') Početna
      li.nav-item
        a.nav-link(href='/datatable') Tablica
      if getuser
          li.nav-item
            a.nav-link(href='data/horses.json' download) Osvježi JSON
          li.nav-item
            a.nav-link(href='data/horses.csv' download) Osvježi CSV
          li.nav-item
            a.nav-link(href='/profile') Profil
          li.nav-item 
            a.nav-link(href='/logout') Odjava
            
      else
          li.nav-item
            a.nav-link(href='/sign-up') Prijava/Registracija
      li.nav-item
.margins
  #toolbar
  table#table.table-responsive(data-toggle='table' data-search='true' data-filter-control='true' data-show-export='true' data-click-to-select='false' data-toolbar='#toolbar')
    thead
      tr
        th(data-field='id_horse' data-filter-control='select' data-sortable='true') ID
        th(data-field='horse_name' data-filter-control='select' data-sortable='true') Horse
        th(data-field='father' data-filter-control='select' data-sortable='true') Father
        th(data-field='mothers_father' data-filter-control='select' data-sortable='true') Mothers father
        th(data-field='year_of_birth' data-filter-control='select' data-sortable='true') Year of Birth
        th(data-field='country_of_birth' data-filter-control='select' data-sortable='true') Country of birth
        th(data-field='gender' data-filter-control='select' data-sortable='true') Gender
        th(data-field='breed' data-filter-control='select' data-sortable='true') Breed
        th(data-field='tournament' data-filter-control='select' data-sortable='true') Tournament
        th(data-field='owner_name' data-filter-control='select' data-sortable='true') Owners name
        th(data-field='owner_surname' data-filter-control='select' data-sortable='true') Owners surname
script(src='script.js')
script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js')
script(src='https://unpkg.com/tableexport.jquery.plugin/tableExport.min.js')
script(src='https://unpkg.com/bootstrap-table@1.17.1/dist/bootstrap-table.min.js')
script(src='https://unpkg.com/bootstrap-table@1.17.1/dist/extensions/export/bootstrap-table-export.min.js')
